			</actions>
		</step>
		<!-- publiée sur le site -->
		<step id="5" name="Publié sur le site">
			<external-permissions>
				<permission name="canDisplay">
					<restrict-to>
						<conditions type="AND">
							<condition type="class">
								<arg name="class.name">org.nextime.ion.osworkflow.util.IonUserGroupCondition</arg>
								<arg name="group">visitors</arg>
							</condition>
						</conditions>
					</restrict-to>
				</permission>
				<permission name="canBeSearched">
					<restrict-to>
						<conditions type="AND">
							<condition type="class">
								<arg name="class.name">org.nextime.ion.osworkflow.util.IonUserGroupCondition</arg>
								<arg name="group">visitors</arg>
							</condition>
						</conditions>
					</restrict-to>
				</permission>
				<permission name="publicationIcon:images/publication-published.gif">
					<restrict-to>
						<conditions type="AND">
							<condition type="class">
								<arg name="class.name">org.nextime.ion.osworkflow.util.IonUseThisPermissionAsMetadata</arg>
							</condition>
						</conditions>
					</restrict-to>
				</permission>
			</external-permissions>
			<actions>
				<action id="51" name="Remettre en brouillon (dépublier)">
					<restrict-to>
						<conditions type="OR">
							<condition type="class">
								<arg name="class.name">org.nextime.ion.osworkflow.util.IonUserGroupCondition</arg>
								<arg name="group">webmasters</arg>
							</condition>
						</conditions>
					</restrict-to>
					<pre-functions>
						<function type="class">
							<arg name="class.name">com.opensymphony.workflow.util.Caller</arg>
						</function>
