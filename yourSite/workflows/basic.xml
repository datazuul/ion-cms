<?xml version="1.0" encoding="ISO-8859-1"?>
<workflow>
	<initial-actions>
		<action id="1">
			<restrict-to>
				<conditions type="OR">
					<condition type="class">
						<arg name="class.name">org.nextime.ion.osworkflow.util.IonUserGroupCondition</arg>
						<arg name="group">users</arg>
					</condition>
				</conditions>
			</restrict-to>
			<pre-functions>
				<function type="class">
					<arg name="class.name">com.opensymphony.workflow.util.Caller</arg>
				</function>
				<!-- indispensable -->
				<function type="class">
					<arg name="class.name">org.nextime.ion.osworkflow.util.IonInitWorkflow</arg>
				</function>
			</pre-functions>
			<results>
				<unconditional-result step="1" owner="${caller}"/>
			</results>
		</action>
	</initial-actions>
	<steps>
		<!-- brouillon de publication -->
		<step id="1" name="Brouillon">
			<external-permissions>
				<permission name="publicationIcon:images/publication-create.gif">
					<restrict-to>
						<conditions type="AND">
							<condition type="class">
								<arg name="class.name">org.nextime.ion.osworkflow.util.IonUseThisPermissionAsMetadata</arg>
							</condition>
						</conditions>
					</restrict-to>
				</permission>
			</external-permissions>
			<actions>
				<action id="11" name="Commencer l'édition">
					<restrict-to>
						<conditions type="OR">
							<condition type="class">
								<arg name="class.name">org.nextime.ion.osworkflow.util.IonOnlyAuthorCondition</arg>
							</condition>
							<condition type="class">
								<arg name="class.name">org.nextime.ion.osworkflow.util.IonUserGroupCondition</arg>
								<arg name="group">webmasters</arg>
							</condition>
						</conditions>
					</restrict-to>
					<pre-functions>
						<function type="class">
							<arg name="class.name">com.opensymphony.workflow.util.Caller</arg>
						</function>
					</pre-functions>
					<results>
						<unconditional-result step="2" owner="${caller}"/>
					</results>
				</action>
				<action id="12" name="Faire valider par un webmaster">
					<restrict-to>
						<conditions type="AND">
							<condition type="class">
								<arg name="class.name">org.nextime.ion.osworkflow.util.IonOnlyAuthorCondition</arg>
							</condition>
							<condition type="beanshell">
								<arg name="script">
									 !org.nextime.ion.framework.business.User.getInstance(context.getCaller()).isInGroup(org.nextime.ion.framework.business.Group.getInstance("webmasters"))
								</arg>
							</condition>
						</conditions>
					</restrict-to>
					<pre-functions>
						<function type="class">
							<arg name="class.name">com.opensymphony.workflow.util.Caller</arg>
						</function>
					</pre-functions>
					<results>
						<unconditional-result step="3" owner="${caller}"/>
					</results>					
				</action>
				<action id="13" name="Publier sur le site">
					<restrict-to>
						<conditions type="AND">
							<condition type="class">
								<arg name="class.name">org.nextime.ion.osworkflow.util.IonUserGroupCondition</arg>
								<arg name="group">webmasters</arg>
							</condition>
						</conditions>
					</restrict-to>
					<pre-functions>
						<function type="class">
							<arg name="class.name">com.opensymphony.workflow.util.Caller</arg>
						</function>
					</pre-functions>
					<results>
						<unconditional-result step="5" owner="${caller}"/>
					</results>
				</action>
			</actions>
		</step>
		<!-- vérouillage pour édition -->
		<step id="2" name="Edition du document">
			<external-permissions>
				<permission name="canEdit">
					<restrict-to>
						<conditions type="AND">
							<condition type="class">
								<arg name="class.name">com.opensymphony.workflow.util.AllowOwnerOnlyCondition</arg>
							</condition>
						</conditions>
					</restrict-to>
				</permission>
				<permission name="publicationIcon:images/publication-lock.gif">
					<restrict-to>
						<conditions type="AND">
							<condition type="class">
								<arg name="class.name">org.nextime.ion.osworkflow.util.IonUseThisPermissionAsMetadata</arg>
							</condition>
						</conditions>
					</restrict-to>
				</permission>
			</external-permissions>
			<actions>
				<action id="21" name="Finir l'édition">
					<restrict-to>
						<conditions type="OR">
							<condition type="class">
								<arg name="class.name">com.opensymphony.workflow.util.AllowOwnerOnlyCondition</arg>
							</condition>
							<condition type="class">
								<arg name="class.name">org.nextime.ion.osworkflow.util.IonUserGroupCondition</arg>
								<arg name="group">webmasters</arg>
							</condition>
						</conditions>
					</restrict-to>
					<pre-functions>
						<function type="class">
							<arg name="class.name">com.opensymphony.workflow.util.Caller</arg>
						</function>
					</pre-functions>
					<results>
						<unconditional-result step="1" owner="${caller}"/>
					</results>
				</action>
			</actions>
		</step>
		<!-- en attente de validation par un admin -->
		<step id="3" name="En attente de validation">
			<external-permissions>
				<permission name="publicationIcon:images/publication-wait.gif">
					<restrict-to>
						<conditions type="AND">
							<condition type="class">
								<arg name="class.name">org.nextime.ion.osworkflow.util.IonUseThisPermissionAsMetadata</arg>
							</condition>
						</conditions>
					</restrict-to>
				</permission>
			</external-permissions>
			<actions>
				<action id="31" name="Publier sur le site">
					<restrict-to>
						<conditions type="OR">
							<condition type="class">
								<arg name="class.name">org.nextime.ion.osworkflow.util.IonUserGroupCondition</arg>
								<arg name="group">webmasters</arg>
							</condition>
						</conditions>
					</restrict-to>
					<pre-functions>
						<function type="class">
							<arg name="class.name">com.opensymphony.workflow.util.Caller</arg>
						</function>
					</pre-functions>
					<results>
						<unconditional-result step="5" owner="${caller}"/>
